<!-- Validation failure messages -->
<% if @docking_space.errors.any? %>
  <% @docking_space.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Docking Space #<%= @docking_space.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_docking_space/<%= @docking_space.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for vessell_id -->
      <div class="form-group">
        <label for="vessell_id" class="control-label">
          Vessell
        </label>

        <%= select_tag(:vessell_id, options_from_collection_for_select(Vessel.all, :id, :name, @docking_space.vessell_id), :class => "form-control") %>
      </div>

      <button class="btn btn-warning">
        Update Docking Space
      </button>
      or
      <a href="/docking_spaces/<%= @docking_space.id %>">Cancel</a>
    </form>
  </div>
</div>
