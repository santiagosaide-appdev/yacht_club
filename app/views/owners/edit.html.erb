<!-- Validation failure messages -->
<% if @owner.errors.any? %>
  <% @owner.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Owner #<%= @owner.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_owner/<%= @owner.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for vessels_id -->
      <div class="form-group">
        <label for="vessels_id" class="control-label">
          Vessels
        </label>

        <%= select_tag(:vessels_id, options_from_collection_for_select(Vessel.all, :id, :name, @owner.vessels_id), :class => "form-control") %>
      </div>

      
      

      <button class="btn btn-warning">
        Update Owner
      </button>
      or
      <a href="/owners/<%= @owner.id %>">Cancel</a>
    </form>
  </div>
</div>
