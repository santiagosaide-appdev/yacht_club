<div class="page-header">
  <h3>Owner #<%= @owner.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Vessels</dt>
      <dd>
        <% if @owner.vessels.present? %>
          <a href="/vessels/<%= @owner.vessels_id %>">
            <%= @owner.vessels.name %>
          </a>
        <% end %>
      </dd>

      <dt>Member</dt>
      <dd>
        <% if @owner.member.present? %>
          <a href="/members/<%= @owner.member_id %>">
            <%= @owner.member.email %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/owners" class="btn btn-primary">
        Back
      </a>
      <% if current_member == @owner.member %>
        <a href="/owners/<%= @owner.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_owner/<%= @owner.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>
